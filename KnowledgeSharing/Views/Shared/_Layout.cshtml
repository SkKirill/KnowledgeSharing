<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KnowledgeSharing</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KnowledgeSharing.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar-nav" style="background-color: rgba(173, 216, 230, 0.7); backdrop-filter: blur(10px);">
            <div class="container-fluid">
                <!-- Логотип/Изображение -->
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                    <img src="@Url.Content("~/images/company_logo.png")" alt="Company Logo" class="img-fluid" style="max-width: 150px; height: auto;">
                    <!-- Если нет изображения, просто текст -->
                    <!-- <span>CompanyName</span> -->
                </a>

                <!-- Меню -->
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="@Url.Action("AboutUs", "Home")">О нас</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="@Url.Action("Contact", "Home")">Контакты</a>
                        </li>
                    </ul>

                    <!-- Вход/Регистрация -->
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark border border-dark rounded px-3 py-1" href="@Url.Action("LogInOut", "LogInOutController")">Вход / Регистрация</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - KnowledgeSharing - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
